# Begin /etc/xinetd.d/ftp

service ftp
{
    disable = yes
    flags = NAMEINARGS IPv6
    socket_type = stream
    user = root
    wait = no
    server = /usr/sbin/pure-ftpd
    server_args = -l pam -E
    log_on_success += DURATION
    log_on_failure += USERID
    instances = 20
    only_from = 10.1.10.1/24
    only_from += 192.168.0.1/24
}

# End /etc/xinetd.d/ftp<Paste>