# Begin /etc/xinetd.d/ssh

service ssh
{
    disable = no
    socket_type = stream
    wait = no
    user = root
    server = /usr/sbin/sshd
    server_args = -i
    groups = yes
    flags = REUSE IPv6
    protocol = tcp
    log_on_success += DURATION
    log_on_failure += USERID
    instances = 9
    only_from = 10.1.10.1/24
    only_from += 192.168.0.1/24
}

# End /etc/xinetd.d/ssh